{
  "name": "optex-formatter",
  "displayName": "OpTeX Formatter",
  "publisher": "tomkys144",
  "description": "Simple optex formatter",
  "version": "0.1.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomkys144/optex-formatter.git"
  },
  "license": "BSD-3-Clause",
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:optex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "optex",
        "extensions": [
          ".tex"
        ]
      }
    ],
    "configuration": [
      {
        "title": "OpTeX Formatter",
        "properties": {
          "optex-formatter.indentStyle": {
            "description": "Switch between spaces and tabs indent style",
            "type": "string",
            "enum": ["space", "tab"],
            "default": "space"
          },
          "optex-formatter.indentWidth": {
            "description": "Number of spaces per indent level",
            "type": "integer",
            "default": 4
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.88.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.5",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9"
  }
}
